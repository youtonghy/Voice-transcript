{
  "name": "voice-transcript-electron",
  "version": "0.2.0",
  "description": "Voice transcription and translation desktop app",
  "author": {
    "name": "youtonghy",
    "email": "hi@youtonghy.com",
    "url": "https://youtonghy.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "debug:py-list": ".venv\\Scripts\\python.exe -m pip list",
    "debug:py-path": ".venv\\Scripts\\python.exe -c \"import sys; print(f'Python Executable Path: {sys.executable}')\"",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist:win": "npm run build:py:win && electron-builder --win",
    "build:py:win": ".venv\\Scripts\\python.exe -m nuitka --onefile --windows-console-mode=disable --output-dir=dist-python\\win --output-filename=transcribe_service.exe transcribe_service.py"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.voice.transcript",
    "productName": "Voice Transcript",
    "icon": "assets/icons/icon.ico",
    "asar": true,
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "renderer.js",
      "settings.html",
      "settings.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist-python/win",
        "to": "python",
        "filter": [
          "transcribe_service.exe"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
